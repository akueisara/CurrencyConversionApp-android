<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/exchange_rate_item_width"
    android:layout_height="@dimen/exchange_rate_item_width"
    android:layout_margin="@dimen/small_margin"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1dp">

    <LinearLayout
        android:layout_margin="@dimen/normal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/currency_flag_image_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/flag_image_height"
            card_view:srcCompat="@drawable/flag_missing"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/currency_name_text"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="USD"/>

        <TextView
            android:id="@+id/currency_exchange_rate_text"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            android:maxLines="1"
            app:autoSizeMinTextSize="8sp"
            tools:text="300.54"/>

    </LinearLayout>

</android.support.v7.widget.CardView>